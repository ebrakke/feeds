FROM golang:1.24-alpine

RUN apk add --no-cache gcc musl-dev sqlite-dev yt-dlp ffmpeg ca-certificates tzdata curl bash

# Install bun
RUN curl -fsSL https://bun.sh/install | bash
ENV PATH="/root/.bun/bin:${PATH}"

# Install air for hot reload
RUN go install github.com/air-verse/air@v1.61.7

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

# Install frontend dependencies
COPY web/frontend/package.json web/frontend/bun.lock* ./web/frontend/
RUN cd web/frontend && bun install

EXPOSE 8080 5173

# Run both Go backend (with air) and Svelte frontend dev server
CMD ["sh", "-c", "cd web/frontend && bun run dev --host 0.0.0.0 & air -c .air.toml"]
