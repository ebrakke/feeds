FROM golang:1.24-alpine

RUN apk add --no-cache gcc musl-dev sqlite-dev yt-dlp ffmpeg ca-certificates tzdata

# Install air for hot reload (v1.61.7 supports Go 1.24)
RUN go install github.com/air-verse/air@v1.61.7

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

EXPOSE 8080

CMD ["air", "-c", ".air.toml"]
